                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < cart.length; i++) { %>
                            <tr>
                                <td class="cart__product__item">
                                    <img src="<%=cart[i]. productdetails.imagesurl[0]%>" alt="" style="width: 100px; height: 100px;">
